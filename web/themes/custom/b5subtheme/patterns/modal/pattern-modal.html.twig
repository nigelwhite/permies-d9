<!-- Button trigger modal --><button type="button" class="btn btn-primary cn_modal_button" data-bs-toggle="modal" data-bs-target="#{% spaceless %}{{modal_name|render|striptags|replace({' ': ''}) }}{% endspaceless %}">{{ modal_name }}</button>

<!-- Modal -->

<div class="modal fade" id="{% spaceless %}{{modal_name|render|striptags|replace({' ': ''}) }}{% endspaceless %}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">{{ modal_name }}</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				{{ modal_description }}
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>
